# API Configuration
VITE_POKEMON_API_BASE_URL=https://pokeapi.co/api/v2
VITE_APP_TITLE=PokéDex Pro
VITE_APP_DESCRIPTION=Ultimate Pokémon Encyclopedia

# Feature Flags
VITE_ENABLE_BATTLE_SIMULATOR=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=true

# Development Settings
VITE_DEV_MODE=true
VITE_LOG_LEVEL=info

# Cache Settings (in minutes)
VITE_CACHE_POKEMON_DATA=5
VITE_CACHE_LIST_DATA=10
VITE_CACHE_STATIC_DATA=60

# Performance Settings
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_MAX_CONCURRENT_REQUESTS=5
